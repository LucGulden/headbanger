{
  "name": "fillcrate",
  "version": "1.0.0",
  "private": true,
  "description": "FillCrate monorepo - Social network for vinyl enthusiasts",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter @fillcrate/web dev",
    "dev:backend": "pnpm --filter @fillcrate/backend start:dev",
    "dev": "pnpm --parallel --filter @fillcrate/web --filter @fillcrate/backend dev",
    "build:shared": "pnpm --filter @fillcrate/shared build",
    "build:web": "pnpm --filter @fillcrate/web build",
    "build:backend": "pnpm --filter @fillcrate/backend build",
    "build": "pnpm build:shared && pnpm --parallel --filter @fillcrate/web --filter @fillcrate/backend build",
    "clean": "pnpm --parallel -r run clean",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}